`timescale 1ns/1ps

module pwm_mejorado_tb(

	);
	localparam R = 8;
	localparam T = 10;
	localparam TIMER_BITS=15;
	reg clk, reset;
	reg[R - 1:0] ciclo;
	reg [TIMER_BITS - 1:0] FINAL_VALUE=1000;
	
	wire pwm_out;
	
	pwm_mejorado #(.R(R),.TIMER_BITS (TIMER_BITS)) uut (
		.clk(clk),
		.reset(reset),
		.ciclo(ciclo),
		.pwm_out(pwm_out)
		.FINAL_VALUE(FINAL_VALUE)
	); 
    
	
	
	
	initial
		#(7 * 2**R * T) $stop;
		
		
	//Generando se√±al de reloj
	
	always
	begin
		clk = 1'b0;
		#(T / 2);
		clk = 1'b1;
		#(T / 2);
	end
	
	
	initial
	begin
		reset = 1'b0;
		#2
		reset = 1'b1;
		ciclo = 0.50 * (2**R);

	end
		
endmodule
